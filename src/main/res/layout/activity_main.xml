<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/sendButton"
        android:layout_width="242dp"
        android:layout_height="77dp"
        android:textSize="24sp"
        app:backgroundTint="#AF3C3C"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.483"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/serverMessage"
        app:layout_constraintVertical_bias="0.529"
        tools:text="Abschicken" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="365dp"
        android:layout_height="63dp"
        android:textAllCaps="false"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/inputField"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="    Gib deine Matrikelnummer ein" />

    <EditText
        android:id="@+id/inputField"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="96dp"
        android:ems="10"
        android:inputType="number"
        android:maxLength="8"
        app:layout_constraintBottom_toTopOf="@+id/serverMessage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/serverMessage"
        android:layout_width="289dp"
        android:layout_height="67dp"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="  Antwort vom Server" />

    <Button
        android:id="@+id/sortButton"
        android:layout_width="246dp"
        android:layout_height="78dp"
        android:textSize="24sp"
        app:backgroundTint="#AF3C3C"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sendButton"
        tools:text="Sortieren" />

    <TextView
        android:id="@+id/sortedNumbers"
        android:layout_width="374dp"
        android:layout_height="52dp"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/sendButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/serverMessage"
        tools:text="Sortierte Matrikelnummer" />

</androidx.constraintlayout.widget.ConstraintLayout>